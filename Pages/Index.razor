@page "/"

<style>

.row-margin-custom 
{
    margin-top: 4.0em;
    margin-bottom: 4.0em;
}
</style>

<PageTitle>Matthew Minor</PageTitle>

<div class="row row-margin-custom d-flex justify-content-center">
    <div class="col-lg-3 justify-content-center text-center">
        <h1 class="@MyNameClass" @onmouseover="@NameMouseOver" @onmouseout="@NameMouseOut">Matthew Minor</h1>
    </div>
</div>
<div class="row row-margin-custom d-flex justify-content-center">
    <div class="col-lg-3 text-center">
        <p class="@MyP1Class" @onmouseover="@P1MouseOver" @onmouseout="@P1MouseOut">I am a software engineer with 3 years of experience building Windows desktop applications in an agile and team-driven environment. 
            I strive to better myself everyday both profesionally and personally. I love talking about Software Design and process imporvements.
        </p>
        <p class="@MyP2Class" @onmouseover="@P2MouseOver" @onmouseout="@P2MouseOut">
            In my spare time, I enjoy playing video games, learning new technologies, and working out.
        </p>
    </div>
</div>
<div class="row row-margin-custom d-flex justify-content-center">
    <div class="col-lg-3 justify-content-center text-center">
        <h5>
            <a href="https://www.linkedin.com/in/matthew-minor-487a76110/">
                <i class="animate__animated animate__zoomInDown animate__slower fa-2x fa-brands fa-linkedin-in"></i>
            </a>&nbsp;&nbsp;&nbsp;&nbsp;
            <a href="https://github.com/MatthewSMinor">
                <i class="animate__animated animate__zoomInDown animate__slower fa-2x fa-brands fa-github"></i>
            </a>
        </h5>
    </div>
   
</div>

@code
{
    bool canAnimate = false;

    protected override async Task OnInitializedAsync()
    {
        await Task.Delay(3000).ConfigureAwait(false);
        canAnimate = true;
    }

    string MyNameClass {get; set;} = "animate__animated animate__zoomInUp animate__slower";
    string MyP1Class {get; set;} = "animate__animated animate__zoomInUp animate__slower";
    string MyP2Class {get; set;} = "animate__animated animate__zoomInDown animate__slower";

    void P1MouseOver()
    {
        if (canAnimate)
            MyP1Class = "animate__animated animate__pulse animate__fast";
    }
    void P1MouseOut()
    {
        if (canAnimate)
            MyP1Class = "";
    }
    void P2MouseOver()
    {
        if (canAnimate)
            MyP2Class = "animate__animated animate__pulse animate__fast";
    }
    void P2MouseOut()
    {
        if (canAnimate)
            MyP2Class = "";
    }

    void NameMouseOver()
    {
        if (canAnimate)
            MyNameClass = "animate__animated animate__pulse animate__fast";
    }

    void NameMouseOut()
    {
        if (canAnimate)
            MyNameClass = "";
    }
}
